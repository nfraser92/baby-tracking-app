@model IEnumerable<Capstone.Models.Book>

@{
    ViewData["Title"] = "Index";
}

    <div class="outerwrapper">

        <h4>Library</h4>

        <p>
            <a asp-action="Create" class="btn btn-secondary">Add a Book!</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Author)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Quantity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BookType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ImagePath)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsOutgrown)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Author)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BookType.Description)
                        </td>
                        <td>
                            <img src="/images/@item.ImagePath" class="imageDisplay" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsOutgrown)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.BookId"><i class="far fa-edit"></i></a> |
                            <a asp-action="Details" asp-route-id="@item.BookId"><i class="fas fa-info"></i></a> |
                            <a asp-action="Delete" asp-route-id="@item.BookId"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
