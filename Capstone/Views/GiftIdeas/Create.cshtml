@model Capstone.Models.ViewModels.Gift_Ideas.GiftUploadViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>GiftIdeas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data" asp-controller="GiftIdeas" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GiftIdeas.ClothesTypeId" class="control-label"></label>
                <select asp-for="GiftIdeas.ClothesTypeId" class="form-control" asp-items="ViewBag.ClothesTypeId"><option value="">Choose Category...</option></select>
            </div>
            <div class="form-group">
                <label asp-for="GiftIdeas.BookTypeId" class="control-label"></label>
                <select asp-for="GiftIdeas.BookTypeId" class="form-control" asp-items="ViewBag.BookTypeId"><option value="">Choose Category...</option></select>
            </div>
            <div class="form-group">
                <label asp-for="GiftIdeas.ToyTypeId" class="control-label"></label>
                <select asp-for="GiftIdeas.ToyTypeId" class="form-control" asp-items="ViewBag.ToyTypeId"><option value="">Choose Category...</option></select>
            </div>
            <div class="form-group">
                <label asp-for="GiftIdeas.Size" class="control-label"></label>
                <input asp-for="GiftIdeas.Size" class="form-control" />
                <span asp-validation-for="GiftIdeas.Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GiftIdeas.Description" class="control-label"></label>
                <input asp-for="GiftIdeas.Description" class="form-control" />
                <span asp-validation-for="GiftIdeas.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" class="form-control" type="file" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
